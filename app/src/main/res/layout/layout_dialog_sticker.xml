<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="10dp" android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/buttonBrick"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sel_bg_button"
            android:src="@drawable/sticker_brick"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/buttonMouse"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sel_bg_button"
            android:src="@drawable/sticker_mouse"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/buttonFire"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sel_bg_button"
            android:src="@drawable/sticker_fire"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/buttonHeart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sel_bg_button"
            android:src="@drawable/sticker_heart"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/buttonSkull"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sel_bg_button"
            android:src="@drawable/sticker_skull"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/buttonPoop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sel_bg_button"
            android:src="@drawable/sticker_poop"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>