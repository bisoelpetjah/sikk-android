<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" app:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/sel_bg_button">

        <ImageView
            android:id="@+id/statusBadge"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/namaKasus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/statusBadge"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/namaKasus"
            android:layout_toLeftOf="@id/statusBadge"
            android:textSize="16sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>