<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.senyummanja.sikk">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity_" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity_" android:launchMode="singleTop"/>

        <activity android:name=".MainActivity_" android:launchMode="singleTop"/>

        <activity android:name=".KasusDetailActivity_" android:launchMode="singleTop"/>

        <activity android:name=".AktorDetailActivity_" android:launchMode="singleTop"/>

    </application>

</manifest>
